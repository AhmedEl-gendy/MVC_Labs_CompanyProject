

<div class="text-center text-success">@TempData["msg"]</div>
<h1>Dependents</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Sex</th>
            <th>Birth Date</th>
            <th>Relationship</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dependent in Model)
        {
            <tr>
                <td>@dependent.DependName</td>
                <td>@dependent.DependSex</td>
                <td>@dependent.DependBirthDate</td>
                <td>@dependent.Relationship</td>
                <th><a href="/Employee/UpdateDependent/?DependName=@dependent.DependName">Edit</a></th>
                <th><a href="/Employee/DeleteDependent?DependName=@dependent.DependName">Delete</a></th>
            </tr>
        }
    </tbody>
</table>
<a href="/Employee/AddDependent">Add Dependent</a>
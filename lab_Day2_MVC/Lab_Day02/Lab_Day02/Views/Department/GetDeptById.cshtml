@{
}
@model Department
<h1>Department Data: </h1>

<p>Number: @Model.DeptNum</p>
<p>Name : @Model.DeptName</p>
<p>Manger: @ViewBag.Employee.Fname</p>
<p>Started Date: @Model.ManagerHiredate</p>
<ul>
    <li>Locations: </li>
        <ul>
            @foreach (var item in Model.Locations)
            {
                <li>Location: @item.Loc</li>
            }
        </ul>
</ul>
<ul>
    <li>Department Employees: </li>
        <ul>
            @foreach (var emp in Model.Employees)
            {
                <li> @(emp.Fname + " " + emp.Lname)</li>
            }
        </ul>
</ul>
<ul>
    <li>Department Projects: </li>
        <ul>
            @foreach (var p in Model.Projects)
            {
                <li> @p.ProjectName</li>
            }
        </ul>
</ul>


<br />

<a href="/Department/displayDepartments">Go To All Departments</a>
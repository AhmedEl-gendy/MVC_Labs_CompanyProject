@model Project

<form asp-action="updateProjectDB" asp-controller="Project">
    <input asp-for="ProjectNumber" hidden />

    <label asp-for="ProjectName">Project Name: </label>
    <input asp-for="ProjectName" class="form-control" />

    <label asp-for="ProjectLocation">Project Location: </label>
    <input asp-for="ProjectLocation" class="form-control" />

    <label asp-for="DeptNum">Department: </label>
    <select asp-for="DeptNum" asp-items="ViewBag.depts" class="form-control">
        <option>Choose a Department</option>
    </select>

    <br />
    <input type="submit" value="Update" class="btn btn-primary" />
</form>


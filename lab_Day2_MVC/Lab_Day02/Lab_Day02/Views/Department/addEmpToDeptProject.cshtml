<div class="container">
    <h1>Add Employee to Project</h1>
    <br />
    <form action="/Department/addToProject" method="post">
        <div class="form-group">
            <label for="employee">Choose an Employee:</label>
            <select class="form-control" name="employee" id="employee">
                <option value="">Choose an Employee</option>
                @foreach (var e in Model)
                {
                    <option value="@e.SSN">@(e.Fname + " " + e.Lname)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="project">Choose a Project:</label>
            <select class="form-control" name="project" id="project" multiple>
                @foreach (var p in ViewBag.projects)
                {
                    <option value="@p.ProjectNumber">@p.ProjectName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="WorksHours">Work Hours:</label>
            <input type="number" class="form-control" name="WorksHours" id="WorksHours" />
        </div>
        <br />
        <input type="submit" class="btn btn-primary" value="Add" />
    </form>
</div>






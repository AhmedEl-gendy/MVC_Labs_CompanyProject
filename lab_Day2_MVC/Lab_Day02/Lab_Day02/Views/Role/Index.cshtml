@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1 class="text-center mb-4">Roles</h1>

<div class="d-flex justify-content-between mb-3">
    <p>
        <a class="btn btn-primary" asp-action="Add">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a class="btn btn-warning btn-sm mr-5" asp-action="Edit" asp-route-id="@item.Name">Edit</a>
                    <a class="btn btn-info btn-sm mr-5" asp-action="Details" asp-route-id="@item.Name">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>








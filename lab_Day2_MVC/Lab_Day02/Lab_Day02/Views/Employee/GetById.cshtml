@{
    Layout = "_myLayout";
}
@model Employee

<h1>Employee Data: </h1>

<p>SSN: @Model.SSN</p>
<p>Name : @(Model.Fname + " " + Model.Lname)</p>
<p>Gender: @Model.Sex</p>
<p>Adress: @Model.Address</p>
<p>Salary: @Model.Salary</p>
<p>BirthDate: @Model.BirthDate</p>
<p>Supervisor: @(Model.Supervisor != null ? Model.Supervisor.Fname : "N/A")</p>
<p>Department: @(Model.Department != null ? Model.Department.DeptName : "N/A")</p>
<a href="/Employee/EmpDependents">Show Employee Dependents</a>

<br />

@if (Model.SSN == Model.Department.ManagerSSN)
{
    <a href="/Department/ShowDepartment">Show Department</a>
}
else
{
    <p>error</p>
}

<br />

<a href="/Employee/Index">Go To All Employees</a>
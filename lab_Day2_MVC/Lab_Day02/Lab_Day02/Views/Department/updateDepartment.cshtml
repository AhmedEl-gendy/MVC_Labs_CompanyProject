@{
}

<form action="@Url.Action("saveUpdate", "Department")" method="post">
    @Html.Hidden("DeptNum")

    <div class="form-group">
        <label for="DeptName">DeptName</label>
        @Html.TextBox("DeptName", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="ManagerHiredate">ManagerHiredate</label>
        @Html.TextBox("ManagerHiredate", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="ManagerSSN">ManagerSSN</label>
        @Html.DropDownList("ManagerSSN", ViewBag.list as SelectList, "Choose a Manager", new { @class = "form-control" })
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />
</form>






